usage: kni <script.kni>

scripts:           <scripts>{1..} :input Script file name(s)
start:             [-s <start>] Start script at this label
fromJson:          [-J] Read kni script as compiled JSON
toJson:            [-j|--json] Write compiled script as JSON.
toHtml:            [-h|--html <script>] :output Write interactive HTML file.
describe:          [-d] Describe instead of running interactively.
transcript:        [-t <script>] :output Write a transcript.
expected:          [-v <script>] :input Verify a prior recorded transcript.
seed:              [-S <seed>] :number Seed the random number generator.
waypoint:          [-r <waypoint>] :input Restore a saved waypoint in the story.

debugInput:        [--di] Log input file before processing
debugRuntime:      [--dr] Enable runtime debug logging
debugParser:       [--dp] Enable parser debug logging
debugInlineLexer:  [--dil] Enable inline lexer debug logging
debugOutlineLexer: [--dol] Enable outline lexer debug logging
debugScanner:      [--ds] Enable scanner debug logging

htmlTitle:           [--html-title <title>] Set the title for the generated page.
htmlColor:           [--html-color <color>] Set the foreground color for the generated page.
htmlBackgroundColor: [--html-background-color <color>] Set the background color for the generated page.
