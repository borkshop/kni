{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "requireConfigFile": false,
        "sourceType": "script",
        "babelOptions": {
            "plugins": [
                "@babel/plugin-syntax-class-properties"
            ]
        }
    },
    "rules": {
        "no-unused-vars": ["error", {"argsIgnorePattern": "^_"}],
        "no-var": "error",
        "prefer-const": "error"
    }
}
