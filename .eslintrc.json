{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 2024,
        "requireConfigFile": false,
        "sourceType": "module",
        "babelOptions": {
            "plugins": [
                "@babel/plugin-syntax-class-properties",
                "@babel/plugin-syntax-import-attributes"
            ]
        }
    },
    "rules": {
        "no-unused-vars": ["error", {"argsIgnorePattern": "^_"}],
        "no-var": "error",
        "prefer-const": "error"
    }
}
